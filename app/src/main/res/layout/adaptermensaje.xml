<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ites.sanchez.tplistview.MainActivity"
    >


    <TextView
        android:id="@+id/txtlogo"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:autoText="false"
        android:background="@drawable/bg_verde"
        android:gravity="center"
        android:text="T"
        android:textAlignment="center"
        android:textColor="@color/blanco"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"/>

    <TextView
        android:id="@+id/txtasunto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/txtlogo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/txtsubcontenido"
        android:paddingLeft="6dp"
        android:paddingTop="2dp"/>

    <TextView
        android:id="@+id/txtsubcontenido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtlogo"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/txtlogo"
        android:text="TextView"
        android:textSize="10sp"
        android:paddingLeft="6dp"
        android:paddingTop="1dp"
        android:paddingBottom="2dp"/>

</RelativeLayout>

